{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": true,
    "strictNullChecks": true,
  },
  "exclude": [
    "node_modules",
    "lib",
    "tests",
    "examples"
  ]
}
